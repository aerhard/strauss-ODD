					<specGrpRef target="#scope.shared"/>
					<specGrpRef target="#scope.performance"/>
					<specGrpRef target="#edits.classes.att.shared"/>
					<specGrpRef target="#edits.datatypes.shared"/>
					<specGrpRef target="#edits.elements.shared"/>
					<specGrpRef target="#edits.macros.shared"/>
				</schemaSpec>
				
				<schemaSpec ident="schema.work" ns="http://www.music-encoding.org/ns/mei" xml:lang="en" start="mei source" prefix="mei_">
					<desc>Compositions by Strauss and other works of art. Based on Peter Stadler's WeGA ODD.</desc>
					<specGrpRef target="#extension.MEI-head"/>
				</schemaSpec>
				
				<schemaSpec ident="schema.place" xml:lang="en" start="place" prefix="rswa_">
					<desc>Places. Based on Anna Maria Komprecht's WeGA ODD.</desc>
					<moduleRef key="tei"/>
					<moduleRef key="header" include="idno"/>
					<moduleRef key="namesdates" include="country geo location place placeName"/>
					<specGrpRef target="#edits.elements.place"/>
				</schemaSpec>
				
			</div>
			<div xml:id="scopes">
				<head>Scopes</head>
				<desc>The 'scopes' below mostly define thematically grouped collections of modules / elements. Combined, they add up to the full scope of a schema. In the whole 'scopes' section, each module and each element may only be cited once.</desc>
				<div>
					<head>Shared scope</head>
					<desc>A scope common to all schemata (except of "place" and "work")</desc>
					<specGrp xml:id="scope.shared">
						<moduleRef key="tei"/>
						<moduleRef key="core"
							include="abbr add author bibl choice cit corr date del desc expan gap graphic head hi item l lb lg list listBibl milestone name note p pb q quote ref rs sic sp speaker stage textLang time title unclear"/>
						<moduleRef key="header" include="idno"/>
						<moduleRef key="namesdates" include="orgName persName placeName"/>
						<moduleRef key="linking" include="ab anchor seg"/>
						<moduleRef key="certainty" include="respons"/>
						<moduleRef key="figures" include="cell figDesc figure row table"/>
					</specGrp>
				</div>
				<div>
					<head>Header and basic text structure scope</head>
					<desc>Common to all schemata containing a TEI header</desc>
					<specGrp xml:id="scope.teistructure">
						<moduleRef key="textstructure" include="TEI body div text"/>
						<!-- core -->
						<elementRef key="resp"/>
						<elementRef key="respStmt"/>
						<!-- header -->
						<elementRef key="availability"/>
						<elementRef key="change"/>
						<elementRef key="creation"/>
						<elementRef key="fileDesc"/>
						<elementRef key="profileDesc"/>
						<elementRef key="publicationStmt"/>
						<elementRef key="sourceDesc"/>
						<elementRef key="teiHeader"/>
						<elementRef key="titleStmt"/>
					</specGrp>
				</div>
				<div>
					<head>Transcription specific scope</head>
					<desc>Depends on scope.teistructure</desc>
					<specGrp xml:id="scope.transcr">
						<moduleRef key="transcr" include="space supplied surplus"/>
						<moduleRef key="msdescription"
							include="additional collection msDesc msIdentifier notesStmt repository"/>
						<moduleRef key="analysis" include="pc"/>
						<!-- core -->
						<elementRef key="ptr"/>
						<elementRef key="addrLine"/>
						<elementRef key="address"/>
						<elementRef key="term"/>
						<!-- header -->
						<elementRef key="edition"/>
						<elementRef key="editionStmt"/>
						<elementRef key="editorialDecl"/>
						<elementRef key="encodingDesc"/>
						<elementRef key="notesStmt"/>
						<elementRef key="revisionDesc"/>
						<elementRef key="textClass"/>
						<!-- textstructure -->
						<elementRef key="byline"/>
						<elementRef key="closer"/>
						<elementRef key="dateline"/>
						<elementRef key="epigraph"/>
						<elementRef key="opener"/>
						<elementRef key="postscript"/>
						<elementRef key="salute"/>
						<elementRef key="signed"/>
					</specGrp>
				</div>
				<div>
					<head>Manuscript specific scope</head>
					<desc>Depends on scope.transcr</desc>
					<specGrp xml:id="scope.transcr.ms">
						<!-- header -->
						<elementRef key="extent"/>
						<elementRef key="handNote"/>
						<!-- msdescription -->
						<elementRef key="accMat"/>
						<elementRef key="additions"/>
						<elementRef key="handDesc"/>
						<elementRef key="objectDesc"/>
						<elementRef key="origDate"/>
						<elementRef key="origPlace"/>
						<elementRef key="physDesc"/>
						<!-- transcr -->
						<elementRef key="handShift"/>
						<elementRef key="mod"/>
						<elementRef key="subst"/>
					</specGrp>
				</div>
				<div>
					<head>Print specific scope</head>
					<desc>Depends on scope.transcr</desc>
					<specGrp xml:id="scope.transcr.bibl">
						<!-- core -->
						<elementRef key="analytic"/>
						<elementRef key="biblScope"/>
						<elementRef key="biblStruct"/>
						<elementRef key="editor"/>
						<elementRef key="imprint"/>
						<elementRef key="monogr"/>
						<elementRef key="pubPlace"/>
						<elementRef key="publisher"/>
						<elementRef key="relatedItem"/>
						<elementRef key="series"/>
					</specGrp>
				</div>
				<div>
					<head>State and eventList scope</head>
					<desc>Common to schemata providing a state and a listEvent element (i.e. the person and org schemata)</desc>
					<specGrp xml:id="scope.state_listEvent">
						<!-- namesdates -->
						<elementRef key="event"/>
						<elementRef key="listEvent"/>
						<elementRef key="state"/>
					</specGrp>
				</div>
				<div>
					<head>Person specific scope</head>
					<desc>Adds elements uniquely used in the person schema</desc>
					<specGrp xml:id="scope.person">
						<!-- core -->
						<elementRef key="gloss"/>
						<!-- namesdates -->
						<elementRef key="affiliation"/>
						<elementRef key="birth"/>
						<elementRef key="death"/>
						<elementRef key="faith"/>
						<elementRef key="occupation"/>
						<elementRef key="person"/>
						<elementRef key="residence"/>
						<elementRef key="sex"/>
					</specGrp>
				</div>
				<div>
					<head>Organization specific scope</head>
					<desc>Adds elements uniquely used in the org schema</desc>
					<specGrp xml:id="scope.org">
						<!-- namesdates -->
						<elementRef key="org"/>
					</specGrp>
				</div>
				<div>
					<head>Performance specific scope</head>
					<desc>Adds elements uniquely used in the performance schema</desc>
					<specGrp xml:id="scope.performance">
						<!-- namesdates -->
						<elementRef key="country"/>
						<elementRef key="settlement"/>
					</specGrp>
				</div>
			</div>

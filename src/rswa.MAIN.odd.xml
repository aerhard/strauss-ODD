					<specGrpRef target="#edits.macros.shared"/>
					<specGrpRef target="#edits.elements.global"/>
				</schemaSpec>
				<schemaSpec ident="schema.compilations" xml:lang="en" start="TEI" prefix="rswa_">
					<desc>Compilations: Editorial compilations of text snippets from other documents</desc>
					<specGrpRef target="#scope.shared"/>
					<specGrpRef target="#scope.teistructure"/>
					<specGrpRef target="#scope.transcr"/>
					<specGrpRef target="#scope.transcr.ms"/>
					<specGrpRef target="#scope.transcr.bibl"/>
					<specGrpRef target="#scope.state_listEvent"/>
					<specGrpRef target="#scope.person"/>
					<specGrpRef target="#scope.org"/>
					<specGrpRef target="#scope.performance"/>
					<specGrpRef target="#extension.MEI-music"/>
					<specGrpRef target="#extension.xinclude"/>
					<specGrpRef target="#extension.tasks"/>
					<specGrpRef target="#edits.classes.att.shared"/>
					<specGrpRef target="#edits.datatypes.shared"/>
					<specGrpRef target="#edits.elements.shared"/>
					<specGrpRef target="#edits.macros.shared"/>
				</schemaSpec>
				<schemaSpec ident="schema.correspondence" xml:lang="en" start="TEI" prefix="rswa_">
					<desc>Transcriptions of manuscript sources: Correspondence, notes, etc.</desc>
					<specGrpRef target="#scope.shared"/>
					<specGrpRef target="#scope.teistructure"/>
					<specGrpRef target="#scope.transcr"/>
					<specGrpRef target="#scope.transcr.ms"/>
					<specGrpRef target="#extension.MEI-music"/>
					<specGrpRef target="#extension.tasks"/>
					<specGrpRef target="#edits.classes.att.shared"/>
					<specGrpRef target="#edits.datatypes.shared"/>

				<schemaSpec ident="schema.literature" xml:lang="en" start="TEI" prefix="rswa_">
					<desc>Transcriptions of printed sources: Articles, reviews, books, etc.</desc>
					<specGrpRef target="#scope.shared"/>
					<specGrpRef target="#scope.teistructure"/>
					<specGrpRef target="#scope.transcr"/>
					<specGrpRef target="#scope.transcr.bibl"/>
					<specGrpRef target="#extension.tasks"/>

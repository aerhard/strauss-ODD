				<schemaSpec ident="schema.org" xml:lang="en" start="org" prefix="rswa_">
					<desc>Organizations: orchestras, publishing houses, families, etc.</desc>
					<specGrpRef target="#scope.shared"/>
					<specGrpRef target="#scope.state_listEvent"/>
					<specGrpRef target="#scope.org"/>
					<specGrpRef target="#edits.classes.att.shared"/>
					<specGrpRef target="#edits.datatypes.shared"/>
					<specGrpRef target="#edits.elements.shared"/>
